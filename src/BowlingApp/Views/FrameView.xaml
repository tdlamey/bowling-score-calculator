<UserControl
	x:Class="BowlingApp.Views.FrameView"

	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:view="clr-namespace:BowlingApp.Views"
	xmlns:vm="clr-namespace:BowlingApp.ViewModels"

	mc:Ignorable="d"
	d:DataContext="{d:DesignInstance Type=vm:FrameViewModel, IsDesignTimeCreatable=True}">

	<Border
		Height="75"
		Width="75"
		BorderBrush="Black"
		BorderThickness="1,1,0,1">

		<Grid Height="75" Width="75">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition />
			</Grid.RowDefinitions>

			<ItemsControl
				HorizontalAlignment="Right"
				ItemsSource="{Binding FrameShotViewModels}">
				<ItemsControl.ItemTemplate>
					<DataTemplate DataType="vm:FrameShotViewModel">
						<view:FrameShotView />
					</DataTemplate>
				</ItemsControl.ItemTemplate>
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>

			<TextBlock
				Grid.Row="1"
				FontSize="36"
				TextAlignment="Center"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Text="{Binding Model.FrameScoreTotal}"/>
		</Grid>
	</Border>
</UserControl>
